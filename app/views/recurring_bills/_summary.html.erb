<%# locals: (summary:, month:) %>

<div class="bg-container rounded-xl shadow-border-xs p-4 mb-4">
  <h2 class="text-lg font-medium mb-4"><%= t(".title", month: l(month, format: "%B")) %></h2>

  <div class="grid grid-cols-2 gap-4">
    <div class="bg-container-inset rounded-lg p-4">
      <p class="text-sm text-secondary mb-1"><%= t(".to_pay") %></p>
      <p class="text-xl font-semibold text-primary">
        <%= format_money(summary[:to_pay]) %>
      </p>
      <p class="text-xs text-secondary mt-1">
        <%= t(".bills_count", count: summary[:pending_count]) %>
      </p>
    </div>

    <div class="bg-container-inset rounded-lg p-4">
      <p class="text-sm text-secondary mb-1"><%= t(".paid") %></p>
      <p class="text-xl font-semibold text-success">
        <%= format_money(summary[:paid]) %>
      </p>
      <p class="text-xs text-secondary mt-1">
        <%= t(".bills_count", count: summary[:paid_count]) %>
      </p>
    </div>
  </div>
</div>
