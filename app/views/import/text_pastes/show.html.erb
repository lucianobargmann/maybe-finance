<%= content_for :header_nav do %>
  <%= render "imports/nav", import: @import %>
<% end %>

<%= content_for :previous_path, imports_path %>

<div class="space-y-4">
  <div class="space-y-4 mx-auto max-w-md">
    <div class="text-center space-y-2">
      <h1 class="text-3xl text-primary font-medium"><%= t(".title") %></h1>
      <p class="text-secondary text-sm"><%= t(".description") %></p>
    </div>

    <div id="text_paste_status">
      <% if @import.pdf_pdf_failed? %>
        <%= render "import/text_pastes/error", import: @import %>
      <% elsif @import.ai_processing? %>
        <%= render "import/text_pastes/processing", import: @import %>
      <% elsif @import.pdf_pdf_complete? %>
        <%= render "import/text_pastes/complete", import: @import %>
      <% else %>
        <%= render "import/text_pastes/form", import: @import %>
      <% end %>
    </div>

    <%= turbo_stream_from @import %>
  </div>

  <div class="flex justify-center">
    <span class="text-secondary text-sm">
      <%= link_to t(".use_csv_instead"), import_upload_path(@import), class: "text-primary underline" %>
    </span>
  </div>
</div>
